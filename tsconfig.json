{
  "compilerOptions": {
    "module": "CommonJs",
    "target": "ES5",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src/",
    "outDir": "./build/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ],
    }
  },
  "include": [
    "./src/**/*",
    "*.d.ts", "gulp.ts"
  ]
}